% Title page
\defbeamertemplate*{title page}{metu}[1][]
{ 
\vspace{-1.5cm}
    	\begin{flushright}
      \includegraphics[width=9cm]{metu.png}\par%
	\end{flushright}
     \vskip1cm%
    \begin{beamercolorbox}[wd=10cm,ht=5ex,leftskip=5cm,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
     \vskip1cm%
    \begin{beamercolorbox}[wd=10cm,leftskip=5cm,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
     \vskip1cm%
    \begin{beamercolorbox}[wd=10cm,leftskip=5cm,#1]{date}
      \usebeamerfont{author}\insertdate%
    \end{beamercolorbox}
  \vfill
}


\defbeamertemplate*{section page}{metu}[1][]
{
  
\vspace{3cm}
